        <div class="icon-section">
            <i class="fa fa-stethoscope" aria-hidden="true"></i><br>

            <small>COVID19 Positive</small>
            <p>256</p>
        </div>
        <div class="detail-section">
            <a asp-action="index" asp-controller="Patients">More Info </a>
        </div>
    </div>
    <div class="dashbord dashbord-green">
        <div class="icon-section">
            <i class="fa fa-heartbeat" aria-hidden="true"></i><br>
