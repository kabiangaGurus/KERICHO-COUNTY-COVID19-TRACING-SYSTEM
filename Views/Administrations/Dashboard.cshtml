                            <a asp-action="Create" asp-controller="Patients" class="btn btn-danger">Register agent &nbsp;<i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
                        </div>

                    }
                }

                @using (Html.BeginForm("Index", "Covid_status", FormMethod.Get))
